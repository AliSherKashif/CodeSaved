        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <gradient
        android:angle="0"
        android:centerColor="@color/button_bg_night_color"
        android:endColor="@color/button_bg_night_color"
        android:startColor="@color/button_bg_night_color" />

    <corners
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="2dp"
        android:radius="2dp"
